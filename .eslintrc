/*
eslint config file. 
*/

{
	"env": {
	  "es6": true,
	  "browser": true
	},
	"globals": {
	  "angular": "readonly",
	  "jquery": "readonly",
	  "$": "readonly",
	  "_": "readonly",
	  "moment": "readonly"
	},
	"extends": "eslint:recommended",
	"parserOptions": {
	  "ecmaVersion": 2015,
	  "sourceType": "module"
	},
	"rules": {
	  "no-console": "warn",
	  "semi": ["error", "always", { "omitLastInOneLineBlock": true }],
	  "indent": ["error", 2],
	  "linebreak-style": ["error", "unix"],
	  "quotes": ["error", "single"]
	}
  }