# EvalAI Environment Variables Example
# Copy this file to .env and fill in your actual values
# NEVER commit .env file to version control

# Django Settings
SECRET_KEY=your-secret-key-at-least-50-characters-long-random-string
DEBUG=False
DJANGO_SETTINGS_MODULE=settings.prod
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# Database Configuration
POSTGRES_NAME=evalai
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-database-password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# AWS Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_DEFAULT_REGION=us-east-1
AWS_ACCOUNT_ID=your-aws-account-id
AWS_STORAGE_BUCKET_NAME=your-s3-bucket-name

# Email Configuration
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-email-password
EMAIL_USE_TLS=True

# Sentry (Error Tracking)
SENTRY_URL=https://your-sentry-dsn@sentry.io/project-id

# ECS/EKS Configuration
CLUSTER=evalai-cluster
EXECUTION_ROLE_ARN=arn:aws:iam::account-id:role/evalaiTaskExecutionRole
SUBNET_1=subnet-xxx
SUBNET_2=subnet-yyy
SUBNET_SECURITY_GROUP=sg-zzz
WORKER_IMAGE=account-id.dkr.ecr.region.amazonaws.com/evalai-worker:latest

# Application Settings
EVALAI_API_SERVER=https://api.yourdomain.com
HOSTNAME=yourdomain.com

# Monitoring
STATSD_ENDPOINT=statsd.yourdomain.com
STATSD_PORT=8125

# Development Only (use only in settings.dev)
# CORS_ORIGIN_ALLOW_ALL=True

# Note: For production, consider using AWS Secrets Manager instead of environment variables
# See docs/SECURITY_SECRETS_MANAGEMENT.md for best practices
